{
  "name": "claude-telegram",
  "version": "0.2.0",
  "description": "Minimal Telegram bot orchestrator for Claude Code CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "claude-telegram": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/bin/cli.js start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "grammy": "^1.21.0",
    "js-yaml": "^4.1.0",
    "telegramify-markdown": "^1.3.2",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "telegram",
    "claude",
    "claude-code",
    "bot",
    "ai"
  ],
  "license": "MIT"
}
